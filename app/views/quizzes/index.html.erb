<p id="notice"><%= notice %></p>

<h1>Quiz page</h1>

<table>
  <thead>
    <tr>
      <th>Dialect</th>
      <th>Grammar</th>
      <th>Tokyo-ben</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= quiz.grammar.dialect.name_jp %></td>
        <td><%= quiz.grammar.description %></td>
        <td><%= quiz.tokyo %></td>
        <td><%= quiz.answer %></td>
        <td><%= link_to 'Show', quiz %></td>
        <td><%= link_to 'Edit', edit_quiz_path(quiz) %></td>
        <td><%= link_to 'Destroy', quiz, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Go to new quiz',  new_quiz_path %>